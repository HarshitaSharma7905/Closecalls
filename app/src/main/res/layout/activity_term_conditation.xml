<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TermConditationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:background="@color/btn_color">
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Condition"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:textAlignment="center"
            android:drawableRight="@drawable/ic_baseline_cancel_24"
            android:drawablePadding="5dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To use a credit or debit card, the cardholder's name must be the same as the name given in the registration process. Closecalls reserves the right to withhold settlement of any transaction should there be discrepancies between the cardholder's name and the name given in the registration process."
            android:textColor="@color/text_color"/>
    </LinearLayout>

</LinearLayout>